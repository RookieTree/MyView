        <Constraint
            android:id="@+id/card10"
            android:layout_width="75dp"
            android:layout_height="125dp"
            android:layout_marginStart="47.5dp"
            android:alpha="1"
            android:layout_marginTop="72.5dp"
            app:layout_constraintTop_toTopOf="@+id/guide_h"
            app:layout_constraintStart_toStartOf="@+id/guide_v" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="2000">
        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@+id/card" />
    </Transition>

</MotionScene>
